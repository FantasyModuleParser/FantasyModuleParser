<Window x:Class="WpfApp1.ESEditDeleteNPC"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Edit or Delete NPCs in the JSON file" Height="200" Width="350" ResizeMode="NoResize">
    <Grid Background="#FFE5E5E5">
        <StackPanel Orientation="Vertical">
            <ComboBox VerticalAlignment="Top" HorizontalAlignment="Left" Height="20" Width="300" Padding="0" Margin="10,10,0,0">
                <ComboBoxItem>Choose an NPC from the JSON file</ComboBoxItem>
            </ComboBox>
            <TextBox TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Left" Width="300" Height="60" VerticalScrollBarVisibility="Auto" Padding="0" Margin="10,5,0,0"/>
            <StackPanel Orientation="Horizontal">
                <Button Content="Delete NPC" Width="100" Padding="0" Margin="50,5,0,0"/>
                <Button Content="Edit NPC" Width="100" Padding="0" Margin="10,5,0,0" />
            </StackPanel>
            <Button Content="Close" VerticalAlignment="Top" HorizontalAlignment="Left" Width="100" Padding="0" Margin="207,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
