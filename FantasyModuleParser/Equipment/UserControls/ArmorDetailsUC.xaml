<UserControl x:Class="FantasyModuleParser.Equipment.UserControls.ArmorDetailsUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FantasyModuleParser.Equipment.UserControls"
             xmlns:enum="clr-namespace:FantasyModuleParser.Equipment.Enums"
             xmlns:model="clr-namespace:FantasyModuleParser.Equipment.Models"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="300">
    <UserControl.Resources>
        <Style TargetType="TextBox" x:Key="positiveNumberTextbox">
            <Setter Property="FontSize" Value="10px" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="2" />
            <EventSetter Event="PreviewTextInput" Handler="PositiveNumberValidationTextBox" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>
    </UserControl.Resources>
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0">
            <Label.Style>
                <Style TargetType="Label">
                    <Setter Property="Content" Value="Armor Class:"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ArmorEnumType}" 
                                     Value="{x:Static enum:ArmorEnum.Shield}">
                            <Setter Property="Content" Value="AC Bonus:"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Label.Style>
        </Label>

        <TextBox Text="{Binding ArmorValue}" Style="{StaticResource positiveNumberTextbox}" Grid.Row="0" Grid.Column="1"/>


        <Label Content="Strength Req:" Grid.Row="0" Grid.Column="2"/>
        <TextBox Text="{Binding StrengthRequirement}" Style="{StaticResource positiveNumberTextbox}" Grid.Row="0" Grid.Column="3"/>

        <Label Content="Has Stealth Disadvantage?" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
            <Label.Style>
                <Style TargetType="Label">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ArmorEnumType}" 
                                     Value="{x:Static enum:ArmorEnum.Shield}">
                            <Setter Property="Visibility" Value="Hidden"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Label.Style>
        </Label>
        <CheckBox IsChecked="{Binding IsStealthDisadvantage}" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center">
            <CheckBox.Style>
                <Style TargetType="CheckBox">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ArmorEnumType}" 
                                     Value="{x:Static enum:ArmorEnum.Shield}">
                            <Setter Property="Visibility" Value="Hidden"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </CheckBox.Style>
        </CheckBox>
    </Grid>
    
</UserControl>
