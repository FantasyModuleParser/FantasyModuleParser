<UserControl x:Class="FantasyModuleParser.NPC.UserControls.NPCTabs.BaseStatsUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FantasyModuleParser.NPC.UserControls.NPCTabs"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="600">
    <!--Formatting of Objects as follows: -->
    <!--Borders Height="" Width="" Margin="" HorizontalAlignment="" VerticalAlignment="" BorderBrush="" BorderThickness="" /> -->
    <!-- <StackPanel Orientation="" Height="" Width="" Margin="" HorizontalAlignment="" VerticalAlignment=""> -->
    <!-- <Label Content="" Height="" Width="" Margin="" Padding="" Foreground="" FontWeight="" HorizontalAlignment="" VerticalAlignment="" /> -->
    <!-- <TextBox Name="" Height="" Width="" Margin="" Padding="" Text="" HorizontalAlignment="" VerticalAlignment=""> -->
    <!-- <ComboBox Name="" Height="" Width="" Margin="" Padding="" Text="" HorizontalAlignment="" VerticalAlignment=""> -->
    <Grid>
        <Border Height="215" Width="580" Margin="5,5,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" BorderBrush="Black" BorderThickness="1" />
        <StackPanel Orientation="Horizontal">
            <StackPanel Orientation="Vertical" VerticalAlignment="Top" Width="285" Height="220">
                <Label Content="NPC Information" Foreground="Gray"  HorizontalAlignment="Left" Margin="5,5,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
                    <Label Content="NPC Name:" VerticalContentAlignment="Center" Width="65" Margin="0,0,0,0" Height="23" Padding="0"/>
                    <TextBox Name="NPC_name" Text="{Binding Path=NPCName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  VerticalAlignment="Center" Height="23" Width="200" Margin="5,0,0,0" Padding="0">
                        <TextBox.ToolTip>
                            <TextBlock>
                                Enter the NPCs Name.
                                <LineBreak />
                                This will also set the main image name and token name, and default save name.
                            </TextBlock>
                        </TextBox.ToolTip>
                    </TextBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Width="280" Margin="0,3,0,0" HorizontalAlignment="Right">
                  <Label Content="Size:" Height="23" Width="26" Margin="50,0,4,0" Padding="0" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" />
                    <ComboBox Name="strSize" Height="23" Width="200" Text="{Binding Path=Size, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top">
                        <ComboBoxItem>Tiny</ComboBoxItem>
                        <ComboBoxItem>Small</ComboBoxItem>
                        <ComboBoxItem>Medium</ComboBoxItem>
                        <ComboBoxItem>Large</ComboBoxItem>
                        <ComboBoxItem>Huge</ComboBoxItem>
                        <ComboBoxItem>Gargantuan</ComboBoxItem>
                        <ComboBox.ToolTip>
                            <TextBlock>
                                Select from the standard size categories.
                            </TextBlock>
                        </ComboBox.ToolTip>
                    </ComboBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Width="280" Margin="0,3,0,0" HorizontalAlignment="Left">
                    <Label Content="Type:" Height="23" Margin="53,0,0,0" Padding="0" VerticalContentAlignment="Center"/>
                    <ComboBox Name="strType" Height="23" Width="195" Margin="5,0,0,0" Padding="0" Text="{Binding Path=NPCType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <ComboBoxItem>abberation</ComboBoxItem>
                        <ComboBoxItem>beast</ComboBoxItem>
                        <ComboBoxItem>celestial</ComboBoxItem>
                        <ComboBoxItem>construct</ComboBoxItem>
                        <ComboBoxItem>dragon</ComboBoxItem>
                        <ComboBoxItem>elemental</ComboBoxItem>
                        <ComboBoxItem>fey</ComboBoxItem>
                        <ComboBoxItem>fiend</ComboBoxItem>
                        <ComboBoxItem>giant</ComboBoxItem>
                        <ComboBoxItem>humanoid</ComboBoxItem>
                        <ComboBoxItem>monstrosity</ComboBoxItem>
                        <ComboBoxItem>ooze</ComboBoxItem>
                        <ComboBoxItem>plants</ComboBoxItem>
                        <ComboBoxItem>undead</ComboBoxItem>
                        <ComboBoxItem>swarm of tiny abberations</ComboBoxItem>
                        <ComboBoxItem>swarm of tiny beasts</ComboBoxItem>
                        <ComboBoxItem>swarm of tiny constructs</ComboBoxItem>
                        <ComboBoxItem>swarm of tiny elementals</ComboBoxItem>
                        <ComboBoxItem>swarm of tiny monstrosities</ComboBoxItem>
                        <ComboBoxItem>swarm of tiny oozes</ComboBoxItem>
                        <ComboBoxItem>swarm of tiny plants</ComboBoxItem>
                        <ComboBoxItem>trap</ComboBoxItem>
                        <ComboBoxItem>vehicle</ComboBoxItem>
                        <ComboBox.ToolTip>
                            <TextBlock>
                                Select from the standard creature types.
                            </TextBlock>
                        </ComboBox.ToolTip>
                    </ComboBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                    <Label Content="Tag:" VerticalContentAlignment="Center" Margin="58,0,6,0" Padding="0"/>
                    <ComboBox Name="strTag" Height="23" Width="109" Text="{Binding Path=Tag, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" VerticalAlignment="Top" >
                        <ComboBoxItem>(aarakocra)</ComboBoxItem>
                        <ComboBoxItem>(any race)</ComboBoxItem>
                        <ComboBoxItem>(bullywug)</ComboBoxItem>
                        <ComboBoxItem>(demon)</ComboBoxItem>
                        <ComboBoxItem>(derro)</ComboBoxItem>
                        <ComboBoxItem>(devil)</ComboBoxItem>
                        <ComboBoxItem>(dragonborn)</ComboBoxItem>
                        <ComboBoxItem>(dwarf)</ComboBoxItem>
                        <ComboBoxItem>(elf)</ComboBoxItem>
                        <ComboBoxItem>(firenewt)</ComboBoxItem>
                        <ComboBoxItem>(genasi)</ComboBoxItem>
                        <ComboBoxItem>(gith)</ComboBoxItem>
                        <ComboBoxItem>(gnoll)</ComboBoxItem>
                        <ComboBoxItem>(gnome)</ComboBoxItem>
                        <ComboBoxItem>(goblinoid)</ComboBoxItem>
                        <ComboBoxItem>(grimlock)</ComboBoxItem>
                        <ComboBoxItem>(grung)</ComboBoxItem>
                        <ComboBoxItem>(half-elf)</ComboBoxItem>
                        <ComboBoxItem>(half-orc)</ComboBoxItem>
                        <ComboBoxItem>(halfling)</ComboBoxItem>
                        <ComboBoxItem>(human)</ComboBoxItem>
                        <ComboBoxItem>(kenku)</ComboBoxItem>
                        <ComboBoxItem>(kobold)</ComboBoxItem>
                        <ComboBoxItem>(kuo-toa)</ComboBoxItem>
                        <ComboBoxItem>(lizardfolk)</ComboBoxItem>
                        <ComboBoxItem>(merfolk)</ComboBoxItem>
                        <ComboBoxItem>(orc)</ComboBoxItem>
                        <ComboBoxItem>(quaggoth)</ComboBoxItem>
                        <ComboBoxItem>(ratfolk)</ComboBoxItem>
                        <ComboBoxItem>(sahuagin)</ComboBoxItem>
                        <ComboBoxItem>(shapechanger)</ComboBoxItem>
                        <ComboBoxItem>(thri-kreen)</ComboBoxItem>
                        <ComboBoxItem>(tiefling)</ComboBoxItem>
                        <ComboBoxItem>(titan)</ComboBoxItem>
                        <ComboBoxItem>(triton)</ComboBoxItem>
                        <ComboBoxItem>(troglodyte)</ComboBoxItem>
                        <ComboBoxItem>(xvart)</ComboBoxItem>
                        <ComboBoxItem>(yuan-ti)</ComboBoxItem>
                        <ComboBoxItem>(yugoloth)</ComboBoxItem>
                        <ComboBox.ToolTip>
                            <TextBlock>
                                Select a specific sub-type of creature
                                <LineBreak />
                                <Italic>You can leave it blank if desired.</Italic>
                            </TextBlock>
                        </ComboBox.ToolTip>
                    </ComboBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                    <Label Content="Alignment:" Margin="21,0,7,0" Padding="0" VerticalAlignment="Center"/>
                    <ComboBox Name="strAlignment" Height="23" Width="100" Text="{Binding Path=Alignment, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top">
                        <ComboBoxItem>unaligned</ComboBoxItem>
                        <ComboBoxItem>lawful good</ComboBoxItem>
                        <ComboBoxItem>lawful neutral</ComboBoxItem>
                        <ComboBoxItem>lawful evil</ComboBoxItem>
                        <ComboBoxItem>neutral good</ComboBoxItem>
                        <ComboBoxItem>true neutral</ComboBoxItem>
                        <ComboBoxItem>neutral evil</ComboBoxItem>
                        <ComboBoxItem>chaotic good</ComboBoxItem>
                        <ComboBoxItem>chaotic neutral</ComboBoxItem>
                        <ComboBoxItem>chaotic evil</ComboBoxItem>
                        <ComboBox.ToolTip>
                            <TextBlock>
                                Select from the standard alignments.
                            </TextBlock>
                        </ComboBox.ToolTip>
                    </ComboBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                    <Label Content="Armor Class:" Margin="13,0,6,0" Padding="0"  VerticalAlignment="Center"/>
                    <TextBox Name="strAC" Height="23" Width="100" Margin="0,0,0,0" Text="{Binding Path=AC, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top">
                        <TextBox.ToolTip>
                            <TextBlock>
                                Enter the NPC's armor class.
                                <LineBreak />
                                You can also enter the armor type in brackets.
                                <LineBreak />
                                <Bold>Example:</Bold> 12 (leather armor)
                            </TextBlock>
                        </TextBox.ToolTip>
                    </TextBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                    <Label Content="Hit Points:" Height="23" Margin="25,0,6,0" Padding="0" VerticalAlignment="Center" />
                    <TextBox Name="strHP" Height="23" Width="100" Margin="0,0,0,0" Text="{Binding Path=HP, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" >
                        <TextBox.ToolTip>
                            <TextBlock>
                                Enter the NPC's hit points, followed by its hit dice in brackets.
                                <LineBreak />
                                <Bold>Example:</Bold> 4 (1d6 + 1)
                                <LineBreak />
                                <Italic>Double-click to open a window that will help build a correct expression</Italic>
                            </TextBlock>
                        </TextBox.ToolTip>
                    </TextBox>
                    <Button Content="Dice Roller" Width="80" Margin="5,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Click="DiceRoller_Click">
                        <Button.ToolTip>
                            <TextBlock>
                                Click on this to apply the average hit points for the range.
                                <LineBreak />
                                <Italic>This is the value stated in official products for NPC hit points</Italic>
                            </TextBlock>
                        </Button.ToolTip>
                    </Button>
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Vertical" VerticalAlignment="Top" Height="220">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                    <Label Content="Gender:" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalContentAlignment="Center" Padding="0" Height="20"/>
                    <ComboBox Name="strGender" Text="{Binding Path=NPCGender, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Height="20" Margin="10,30,0,0" VerticalAlignment="Center" Width="100">
                        <ComboBox.ToolTip>
                            <TextBlock><Run Text="Select the NPC's gender."/><LineBreak /><Italic><Run Text="This will insert gender-specific pronouns in the descriptive text"/></Italic></TextBlock>
                        </ComboBox.ToolTip>
                        <ComboBoxItem IsSelected="True" Content="neutral"/>
                        <ComboBoxItem Content="male"/>
                        <ComboBoxItem Content="female"/>
                    </ComboBox>
                    <CheckBox IsChecked="{Binding Path=Unique, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Name="chkUnique" Margin="10,30,0,0" Padding="0" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="20" />
                    <Label Content="Unique" HorizontalAlignment="Left" Margin="5,30,0,0" VerticalContentAlignment="Center" Height="20" Padding="0">
                        <Label.ToolTip>
                            <TextBlock>
                                Check if the NPC is unique for any reason.
                                <LineBreak />
                                <Italic>This will capitalize its name in the descriptive text.</Italic>
                            </TextBlock>
                        </Label.ToolTip>
                    </Label>
                    <CheckBox IsChecked="{Binding Path=NPCNamed, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Name="chkNamed" Margin="10,30,0,0" Padding="0" Height="20" HorizontalAlignment="Left" VerticalContentAlignment="Center"/>
                    <Label Content="Name" HorizontalAlignment="Left" Margin="5,30,0,0" Height="20" VerticalContentAlignment="Center" Padding="0">
                        <Label.ToolTip>
                            <TextBlock>
                                Check if the name enter is a proper name.
                                <LineBreak />
                                <Italic>This will use just the first word of the name in the descriptive text.</Italic>
                                <LineBreak />
                                ('Thomas Wolfbane' will be referred to as 'Thomas' throughout; 'Ironbane, Destroyer of Worlds' as 'Ironbane')
                            </TextBlock>
                        </Label.ToolTip>
                    </Label>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Label Content="Speed (ft.)" FontWeight="Bold" HorizontalContentAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Speed" HorizontalContentAlignment="Left" Margin="110,5,0,0" Padding="0" Height="20" VerticalContentAlignment="Center"/>
                    <TextBox Text="{Binding Path=Speed, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Name="intSpeed" HorizontalContentAlignment="Left" Height="20" Margin="5,5,0,0" VerticalAlignment="Top" Width="40" Padding="0" PreviewTextInput="NumberValidationTextBox">
                        <TextBox.ToolTip>
                            <TextBlock>
                                Enter the NPC's base movement speed in feet (ft.)
                                <LineBreak />
                                <Italic>A value of 0 indicates the NPC cannot move in this way.</Italic>
                            </TextBlock>
                        </TextBox.ToolTip>
                    </TextBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Burrow" HorizontalContentAlignment="Left" Margin="105,3,0,0" VerticalContentAlignment="Center" Padding="0"/>
                    <TextBox Name="intBurrow" HorizontalAlignment="Left" Height="20" Margin="5,3,0,0" Text="{Binding Path=Burrow, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="40" PreviewTextInput="NumberValidationTextBox">
                        <TextBox.ToolTip>
                            <TextBlock>
                                Enter the NPC's burrowing speed in feet (ft.)
                                <LineBreak />
                                <Italic>A value of 0 indicates the NPC cannot move in this way.</Italic>
                            </TextBlock>
                        </TextBox.ToolTip>
                    </TextBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Climb" HorizontalContentAlignment="Left" Margin="112,3,0,0" VerticalContentAlignment="Center" Padding="0"/>
                    <TextBox Name="intClimb" HorizontalAlignment="Left" Height="20" Margin="5,3,0,0" Text="{Binding Path=Climb, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="40" PreviewTextInput="NumberValidationTextBox">
                        <TextBox.ToolTip>
                            <TextBlock>
                                Enter the NPC's climbing speed in feet (ft.)
                                <LineBreak />
                                <Italic>A value of 0 indicates the NPC cannot move in this way.</Italic>
                            </TextBlock>
                        </TextBox.ToolTip>
                    </TextBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Fly" HorizontalContentAlignment="Left" Margin="128,3,0,0" VerticalContentAlignment="Center" Padding="0"/>
                    <TextBox Name="intFly" HorizontalAlignment="Left" Height="20" Margin="5,3,0,0" Text="{Binding Path=Fly, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="40" PreviewTextInput="NumberValidationTextBox">
                        <TextBox.ToolTip>
                            <TextBlock>
                                Enter the NPC's flying speed in feet (ft.)
                                <LineBreak />
                                <Italic>A value of 0 indicates the NPC cannot move in this way.</Italic>
                            </TextBlock>
                        </TextBox.ToolTip>
                    </TextBox>
                    <CheckBox Name="boolHover" Content="Hover" IsChecked="{Binding Path=Hover, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="5,3,0,0" Padding="5,0,0,0" VerticalContentAlignment="Center" Height="20">
                        <CheckBox.ToolTip>
                            <TextBlock>
                                Check this box if the NPC hovers instead of flies
                            </TextBlock>
                        </CheckBox.ToolTip>
                    </CheckBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Swim" HorizontalContentAlignment="Left" Margin="115,3,0,0" VerticalContentAlignment="Center" Padding="0"/>
                    <TextBox Name="intSwim" HorizontalAlignment="Left" Height="20" Margin="5,3,0,0" Text="{Binding Path=Swim, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="40" PreviewTextInput="NumberValidationTextBox">
                        <TextBox.ToolTip>
                            <TextBlock>
                                Enter the NPC's swimming speed in feet (ft.)
                                <LineBreak />
                                <Italic>A value of 0 indicates the NPC cannot move in this way.</Italic>
                            </TextBlock>
                        </TextBox.ToolTip>
                    </TextBox>
                </StackPanel>
            </StackPanel>
        </StackPanel>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="230" Margin="5,230,0,0" VerticalAlignment="Top" Width="280"/>
        <StackPanel Orientation="Horizontal">
            <StackPanel Orientation="Vertical" Width="150" VerticalAlignment="Top" Height="225" Margin="10,235,0,0">
                <Label Content="Statistics" Padding="0" Foreground="Gray" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top" />
                <StackPanel Orientation="Horizontal">
                    <Label Content="Ability Scores" Width="150" Padding="0" HorizontalContentAlignment="Center" Margin="0,5,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="STR" HorizontalAlignment="Center" Margin="35,5,0,0" Height="20" VerticalContentAlignment="Center" Padding="0"/>
                    <TextBox Name="strAttrStr" LostFocus="StrengthScore_TextChanged" HorizontalContentAlignment="Center" Height="20" Margin="5,5,0,0" Text="{Binding Path=AttributeStr, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="40" Padding="0"  PreviewTextInput="NumberValidationTextBox">
                        <TextBox.ToolTip>
                            <TextBlock>
                                Enter the NPC's Strength ability.
                                <LineBreak />
                                <Italic>The range is 0 to 30</Italic>
                                <LineBreak />
                                The ability modifier is calculated and shown to the right of this box.
                            </TextBlock>
                        </TextBox.ToolTip>
                    </TextBox>
                    <Label Name="strModStr" Content="+" Height="20" Padding="0" HorizontalAlignment="Center" Margin="5,5,0,0" VerticalContentAlignment="Center"/>
                    <Label Name="strModStr1" Content="0" Height="20" Padding="0" HorizontalAlignment="Center" Margin="0,5,0,0" VerticalContentAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="DEX" HorizontalAlignment="Left" Margin="33,5,0,0" VerticalContentAlignment="Center" Height="20" Padding="0"/>
                    <TextBox Name="strAttrDex" Text="{Binding Path=AttributeDex, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" LostFocus="DexterityScore_TextChanged" HorizontalContentAlignment="Center" Height="20" Margin="5,5,0,0" VerticalAlignment="Top" Width="40" Padding="0"  PreviewTextInput="NumberValidationTextBox">
                        <TextBox.ToolTip>
                            <TextBlock>
                                Enter the NPC's Dexterity ability.
                                <LineBreak />
                                <Italic>The range is 0 to 30</Italic>
                                <LineBreak />
                                The ability modifier is calculated and shown to the right of this box.
                            </TextBlock>
                        </TextBox.ToolTip>
                    </TextBox>
                    <Label Name="strModDex" Content="+" Height="20" Padding="0" HorizontalAlignment="Center" Margin="5,5,0,0" VerticalContentAlignment="Center"/>
                    <Label Name="strModDex1" Content="0" Height="20" Padding="0" HorizontalAlignment="Center" Margin="0,5,0,0" VerticalContentAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="CON" HorizontalAlignment="Left" Margin="30,5,0,0" Padding="0" Height="20" VerticalContentAlignment="Center"/>
                    <TextBox Name="strAttrCon" LostFocus="ConstitutionScore_TextChanged" HorizontalContentAlignment="Center" Height="20" Margin="5,5,0,0" Text="{Binding Path=AttributeCon, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="40" Padding="0" PreviewTextInput="NumberValidationTextBox">
                        <TextBox.ToolTip>
                            <TextBlock>
                                Enter the NPC's Constitution ability.
                                <LineBreak />
                                <Italic>The range is 0 to 30</Italic>
                                <LineBreak />
                                The ability modifier is calculated and shown to the right of this box.
                            </TextBlock>
                        </TextBox.ToolTip>
                    </TextBox>
                    <Label Name="strModCon" Content="+" Height="20" Padding="0" HorizontalAlignment="Center" Margin="5,5,0,0" VerticalContentAlignment="Center"/>
                    <Label Name="strModCon1" Content="0" Height="20" Padding="0" HorizontalAlignment="Center" Margin="0,5,0,0" VerticalContentAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="INT" HorizontalAlignment="Left" Margin="37,5,0,0" Height="20" Padding="0" VerticalContentAlignment="Center"/>
                    <TextBox Name="strAttrInt" LostFocus="IntelligenceScore_TextChanged" HorizontalContentAlignment="Center" Height="20" Margin="5,5,0,0" Text="{Binding Path=AttributeInt, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="40" Padding="0" PreviewTextInput="NumberValidationTextBox">
                        <TextBox.ToolTip>
                            <TextBlock>
                                Enter the NPC's Intelligence ability.
                                <LineBreak />
                                <Italic>The range is 0 to 30</Italic>
                                <LineBreak />
                                The ability modifier is calculated and shown to the right of this box.
                            </TextBlock>
                        </TextBox.ToolTip>
                    </TextBox>
                    <Label Name="strModInt" Content="+" Height="20" Padding="0" HorizontalAlignment="Center" Margin="5,5,0,0" VerticalContentAlignment="Center"/>
                    <Label Name="strModInt1" Content="0" Height="20" Padding="0" HorizontalAlignment="Center" Margin="0,5,0,0" VerticalContentAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="WIS" HorizontalAlignment="Left" Margin="34,5,0,0" VerticalContentAlignment="Center" Padding="0"/>
                    <TextBox Name="strAttrWis" LostFocus="WisdomScore_TextChanged" HorizontalContentAlignment="Center" Height="20" Margin="5,5,0,0" Text="{Binding Path=AttributeWis, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="40" Padding="0" PreviewTextInput="NumberValidationTextBox">
                        <TextBox.ToolTip>
                            <TextBlock>
                                Enter the NPC's Wisdom ability.
                                <LineBreak />
                                <Italic>The range is 0 to 30</Italic>
                                <LineBreak />
                                The ability modifier is calculated and shown to the right of this box.
                            </TextBlock>
                        </TextBox.ToolTip>
                    </TextBox>
                    <Label Name="strModWis" Content="+" Height="20" Padding="0" HorizontalAlignment="Center" Margin="5,5,0,0" VerticalContentAlignment="Center"/>
                    <Label Name="strModWis1" Content="0" Height="20" Padding="0" HorizontalAlignment="Center" Margin="0,5,0,0" VerticalContentAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="CHA" HorizontalAlignment="Left" Margin="31,5,0,0" VerticalContentAlignment="Center" Padding="0"/>
                    <TextBox Name="strAttrCha" LostFocus="CharismaScore_TextChanged" HorizontalContentAlignment="Center" Height="20" Margin="5,5,0,0" Text="{Binding Path=AttributeCha, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="40" Padding="0" PreviewTextInput="NumberValidationTextBox">
                        <TextBox.ToolTip>
                            <TextBlock>
                                Enter the NPC's Charisma ability.
                                <LineBreak />
                                <Italic>The range is 0 to 30</Italic>
                                <LineBreak />
                                The ability modifier is calculated and shown to the right of this box.
                            </TextBlock>
                        </TextBox.ToolTip>
                    </TextBox>
                    <Label Name="strModCha" Content="+" Height="20" Padding="0" HorizontalAlignment="Center" Margin="5,5,0,0" VerticalContentAlignment="Center"/>
                    <Label Name="strModCha1" Content="0" Height="20" Padding="0" HorizontalAlignment="Center" Margin="0,5,0,0" VerticalContentAlignment="Center"/>
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Vertical" VerticalAlignment="Top" Margin="0,255,0,0" Height="205">
                <StackPanel Orientation="Horizontal" >
                    <Label Content="Saving Throws" HorizontalContentAlignment="Center" Margin="0,0,0,0" Padding="0" VerticalAlignment="Top" Width="130" FontWeight="Bold"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Height="25" Width="130">
                    <Label Content="STR" HorizontalAlignment="Left" Margin="24,5,0,0" VerticalContentAlignment="Center" Padding="0" Height="20"/>
                    <TextBox Name="strSaveStr" Text="{Binding Path=SavingThrowStr, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalContentAlignment="Center" Height="20" Margin="5,5,0,0" VerticalAlignment="Top" Width="40" Padding="0" PreviewTextInput="NumberValidationTextBox">
                        <TextBox.ToolTip>
                            <TextBlock>
                                Enter the NPC's saving throw bonus for strength saves.
                                <LineBreak />
                                <Italic>Positive Values must be entered without the plus sign.</Italic>
                                <LineBreak />
                                <Italic>E.g. +2 is entered as 2.</Italic>
                            </TextBlock>
                        </TextBox.ToolTip>
                    </TextBox>
                    <CheckBox Name="chkSave0Str" IsChecked="{Binding Path=SavingThrowStrBool, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Margin="5,5,0,0" VerticalAlignment="Center">
                        <CheckBox.ToolTip>
                            <TextBlock>
                                Check here if the saving throw should be set to show as '+0' in the statblock.
                            </TextBlock>
                        </CheckBox.ToolTip>
                    </CheckBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Height="25" Width="130">
                    <Label Content="DEX" HorizontalAlignment="Left" Margin="22,5,0,0" VerticalContentAlignment="Center" Padding="0" Height="20"/>
                    <TextBox Name="strSaveDex" HorizontalContentAlignment="Center" Height="20" Margin="5,5,0,0" Text="{Binding Path=SavingThrowDex, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="40" Padding="0" PreviewTextInput="NumberValidationTextBox">
                        <TextBox.ToolTip>
                            <TextBlock>
                                Enter the NPC's saving throw bonus for dexterity saves.
                                <LineBreak />
                                <Italic>Positive Values must be entered without the plus sign.</Italic>
                                <LineBreak />
                                <Italic>E.g. +2 is entered as 2.</Italic>
                            </TextBlock>
                        </TextBox.ToolTip>
                    </TextBox>
