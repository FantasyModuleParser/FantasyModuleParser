            </TextBox.ToolTip>
        </TextBox>
        <Label Name="strModCon" Content="+0" Padding="0" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="41" Grid.RowSpan="2" Grid.Column="14" Grid.ColumnSpan="2" />
