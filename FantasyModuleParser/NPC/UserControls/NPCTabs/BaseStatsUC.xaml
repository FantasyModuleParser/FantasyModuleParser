                </TextBlock>
            </TextBox.ToolTip>
        </TextBox>
        <Label Name="strModInt" Content="+0" Padding="0" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="44" Grid.RowSpan="2" Grid.Column="14" Grid.ColumnSpan="2" />
        <Label Content="WIS" HorizontalAlignment="Right" VerticalAlignment="Center" Padding="0" Grid.Row="47" Grid.RowSpan="2" Grid.Column="5" Grid.ColumnSpan="3" />
        <TextBox Name="strAttrWis" TextChanged="WisdomScore_TextChanged" Text="{Binding Path=AttributeWis, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" PreviewTextInput="PositiveNumberValidationTextBox" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Row="47" Grid.RowSpan="2" Grid.Column="9" Grid.ColumnSpan="5" TabIndex="12">
            <TextBox.ToolTip>
                <TextBlock>
					Enter the NPC's Wisdom ability.
					<LineBreak />
					<Italic>The range is 0 to 30</Italic>
					<LineBreak />
					The ability modifier is calculated and shown to the right of this box.
                </TextBlock>
            </TextBox.ToolTip>
