            <ComboBoxItem>(genasi)</ComboBoxItem>
            <ComboBoxItem>(gith)</ComboBoxItem>
            <ComboBoxItem>(gnoll)</ComboBoxItem>
            <ComboBoxItem>(gnome)</ComboBoxItem>
            <ComboBoxItem>(goblinoid)</ComboBoxItem>
            <ComboBoxItem>(grimlock)</ComboBoxItem>
            <ComboBoxItem>(grung)</ComboBoxItem>
            <ComboBoxItem>(half-elf)</ComboBoxItem>
            <ComboBoxItem>(half-orc)</ComboBoxItem>
            <ComboBoxItem>(halfling)</ComboBoxItem>
            <ComboBoxItem>(human)</ComboBoxItem>
