            <TextBox.ToolTip>
                <TextBlock>
				    Fill in any text you want to use for the language skill in place of the standard texts above.
                </TextBlock>
            </TextBox.ToolTip>
        </TextBox>
        <CheckBox Name="chkTelepathy" IsChecked="{Binding Path=Telepathy, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Content="Telepathy" Padding="5,0,0,0" VerticalAlignment="Center" Grid.Row="62" Grid.RowSpan="2" Grid.Column="21" Grid.ColumnSpan="8">
            <CheckBox.ToolTip>
                <TextBlock>
				    Check this box if your NPC has telepathy.
                </TextBlock>
            </CheckBox.ToolTip>
        </CheckBox>
        <Label Content="Range:" Padding="0" VerticalAlignment="Center" Grid.Row="62" Grid.RowSpan="2" Grid.Column="30" Grid.ColumnSpan="4" />
        <TextBox Name="strTelepathyRange" Text="{Binding Path=TelepathyRange, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Padding="5,0,0,0" VerticalAlignment="Center" VerticalContentAlignment="Center" Grid.Row="62" Grid.RowSpan="2" Grid.Column="34" Grid.ColumnSpan="18">
            <TextBox.ToolTip>
                <TextBlock>
								Fill in the range (and the unit) of your NPC's telepathy.
								<LineBreak />
								<Italic>For example: 150 ft. or 5 miles</Italic>
                </TextBlock>
            </TextBox.ToolTip>
        </TextBox>
