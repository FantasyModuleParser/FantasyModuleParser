        <!--#region Languages-->
        <Label Content="Languages Spoken" Foreground="Gray" FontWeight="Bold" Padding="0" VerticalAlignment="Center" Grid.Row="2" Grid.RowSpan="2" Grid.Column="21" Grid.ColumnSpan="11"/>
        <Label Content="Standard" Padding="0" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="5" Grid.RowSpan="2" Grid.Column="21" Grid.ColumnSpan="15"/>
        <ListBox Name="listStandard" ItemsSource="{Binding Path=StandardLanguages}" SelectionMode="Multiple" Padding="0" Grid.Row="8" Grid.RowSpan="18" Grid.Column="21" Grid.ColumnSpan="15">
            <ListBox.ToolTip>
                <TextBlock>
					Select the standard languages that your NPC knows.
					<LineBreak />
					<Italic>You can select as many as you like.</Italic>
                </TextBlock>
            </ListBox.ToolTip>
            <ListBox.ItemContainerStyle>
                <Style TargetType="{x:Type ListBoxItem}">
                    <Setter Property="IsSelected" Value="{Binding Selected, Mode=TwoWay}"/>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Language}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Label Content="Exotic" Padding="0" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="5" Grid.RowSpan="2" Grid.Column="37" Grid.ColumnSpan="15"/>
