                                    <TextBox.ToolTip>
                                        <TextBlock>
                                            Enter the NPC's base movement speed in feet (ft.)
                                            <LineBreak />
                                            <Italic>A value of 0 indicates the NPC cannot move in this way.</Italic>
                                        </TextBlock>
                                    </TextBox.ToolTip>
                                </TextBox>
                            </StackPanel>
