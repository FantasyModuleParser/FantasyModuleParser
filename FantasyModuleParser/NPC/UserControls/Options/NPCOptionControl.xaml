                                </ComboBox>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Armor Class:" VerticalAlignment="Top" Margin="14,8,0,0" Padding="0"/>
                                <TextBox Name="strAC" Height="20" Margin="5,5,0,0" Text="{Binding AC}" VerticalAlignment="Top" Width="100">
                                    <TextBox.ToolTip>
                                        <TextBlock>
                                            Enter the NPC's armor class.
                                            <LineBreak />
                                            You can also enter the armor type in brackets.
                                            <LineBreak />
                                            <Bold>Example:</Bold> 12 (leather armor)
                                        </TextBlock>
                                    </TextBox.ToolTip>
                                </TextBox>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Hit Points:" VerticalAlignment="Center" Height="20" Margin="25,0,0,0" Padding="0"/>
                                <TextBox Name="strHP" Height="20" Margin="5,0,0,0" Text="{Binding HP}" VerticalAlignment="Center" Width="100">
                                    <TextBox.ToolTip>
                                        <TextBlock>
                                            Enter the NPC's hit points, followed by its hit dice in brackets.
                                            <LineBreak />
                                            <Bold>Example:</Bold> 4 (1d6 + 1)
                                            <LineBreak />
                                            <Italic>Double-click to open a window that will help build a correct expression</Italic>
                                        </TextBlock>
                                    </TextBox.ToolTip>
                                </TextBox>
                                <Button Content="Mean" HorizontalAlignment="Left" Margin="5,6,0,0" VerticalAlignment="Top" Width="40">
                                    <Button.ToolTip>
                                        <TextBlock>
                                            Click on this to apply the average hit points for the range.
                                            <LineBreak />
                                            <Italic>This is the value stated in official products for NPC hit points</Italic>
                                        </TextBlock>
                                    </Button.ToolTip>
                                </Button>
                                <Button Content="Roll" HorizontalAlignment="Left" Margin="5,6,0,0" VerticalAlignment="Top" Width="40">
                                    <Button.ToolTip>
                                        <TextBlock>
                                            Click on this button to roll hit points.
                                            <LineBreak />
                                            <Italic>This will give each NPC an individual total</Italic>
                                        </TextBlock>
                                    </Button.ToolTip>
                                </Button>
