                            <StackPanel Orientation="Horizontal">
                                <Label Content="Alignment:" VerticalAlignment="Top" Margin="23,9,0,0" Padding="0"/>
                                <ComboBox Name="strAlignment" Height="20" Margin="5,5,0,0" Text="{Binding Alignment}" VerticalAlignment="Top" Width="100">
