                        </StackPanel>
                        <StackPanel Orientation="Vertical" VerticalAlignment="Top" Height="220">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                                <Label Content="Gender:" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalContentAlignment="Center" Padding="0" Height="20"/>
                                <ComboBox Name="strGender" Text="{Binding NPCGender}" HorizontalAlignment="Left" Height="20" Margin="10,30,0,0" VerticalAlignment="Center" Width="100">
                                    <ComboBox.ToolTip>
                                        <TextBlock><Run Text="Select the NPC's gender."/><LineBreak /><Italic><Run Text="This will insert gender-specific pronouns in the descriptive text"/></Italic></TextBlock>
                                    </ComboBox.ToolTip>
                                    <ComboBoxItem IsSelected="True" Content="neutral"/>
                                    <ComboBoxItem Content="male"/>
                                    <ComboBoxItem Content="female"/>
                                </ComboBox>
                                <CheckBox IsChecked="{Binding Unique}" Name="chkUnique" Margin="10,30,0,0" Padding="0" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="20" />
                                <Label Content="Unique" HorizontalAlignment="Left" Margin="5,30,0,0" VerticalContentAlignment="Center" Height="20" Padding="0">
                                    <Label.ToolTip>
                                        <TextBlock>
                                            Check if the NPC is unique for any reason.
                                            <LineBreak />
                                            <Italic>This will capitalize its name in the descriptive text.</Italic>
                                        </TextBlock>
                                    </Label.ToolTip>
                                </Label>
                                <CheckBox IsChecked="{Binding NPCNamed}" Name="chkNamed" Margin="10,30,0,0" Padding="0" Height="20" HorizontalAlignment="Left" VerticalContentAlignment="Center"/>
                                <Label Content="Name" HorizontalAlignment="Left" Margin="5,30,0,0" Height="20" VerticalContentAlignment="Center" Padding="0">
                                    <Label.ToolTip>
                                        <TextBlock>
                                            Check if the name enter is a proper name.
                                            <LineBreak />
                                            <Italic>This will use just the first word of the name in the descriptive text.</Italic>
                                            <LineBreak />
                                            ('Thomas Wolfbane' will be referred to as 'Thomas' throughout; 'Ironbane, Destroyer of Worlds' as 'Ironbane')
                                        </TextBlock>
                                    </Label.ToolTip>
                                </Label>
                            </StackPanel>
